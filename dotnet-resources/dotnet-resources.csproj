<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RollForward>Major</RollForward>
    <RootNamespace>Dotnet.Resources</RootNamespace>
    <PackAsTool>true</PackAsTool>
    
    <Product>zvoove pipelines</Product>
    <Description>.NET Core Global Tool to edit resources of exe</Description>
    <PackageTags>resource edit exe compile hack</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CliWrap" />
    <PackageReference Include="Nerdbank.GitVersioning">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <Target Name="ResourceHacker">
    <Exec Command="dotnet run &quot;$(MSBuildProjectDirectory)/ResourceHacker.csx&quot;" WorkingDirectory="$([System.IO.Path]::GetTempPath())/MSBuildTemp" EnvironmentVariables="ImportDirectoryBuildProps=false" />
  </Target>
  <ItemGroup>
    <None Include="ResourceHacker.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostPack" AfterTargets="Pack" Condition="'$(Configuration)' == 'Debug'">
    <Exec Command="dotnet tool uninstall &quot;$(MSBuildProjectName)&quot; --tool-path &quot;$(ArtifactsPath)/tool&quot;" ContinueOnError="true" />
    <Exec Command="dotnet tool install &quot;$(MSBuildProjectName)&quot; --tool-path &quot;$(ArtifactsPath)/tool&quot; --source &quot;$(ArtifactsPath)/package/$(Configuration)&quot;" />
  </Target>

</Project>
